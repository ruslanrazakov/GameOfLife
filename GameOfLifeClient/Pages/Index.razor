@page "/"

<h1>Hello, world!</h1>

<p> UniverseSize is @Universe.Size</p>

<table>
@for (int i = 0; i < Universe.Size; i++)
{
    <tr>
    @for (int j = 0; j < Universe.Size; j++)
    {
        if(Universe.CurrentGeneration[new GameOfLife.Core.Point(i, j)].Alive)
        {
            <td style="background-color: blue; width: 8px; height: 8px"></td>
        }
        else
        {
            <td style="background-color: red;  width: 8px; height: 8px"></td>
        }
        
    }
    </tr>
}
</table>